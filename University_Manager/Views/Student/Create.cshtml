}
<h2>Add Student </h2>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Custom_design/ButtonStyle.css" rel="stylesheet" />

@if (ViewBag.registrationId != null)
{
