@model IEnumerable<University_Manager.Models.Teacher>
@{
    ViewBag.Title = "Index";
}


<div class="panel panel-primary">
    <div class="panel-heading clearfix">
        <span class="glyphicon glyphicon-th"></span><h4 class="title">COURSES</h4>
        <input type="button" class="btn btn-default pull-right btp" value="Create new" onclick="location.href='@Url.Action("Create", "Teacher")'" />
    </div>
    <div class="container-outer" style="padding:10px">
        <table id="myTable" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TeacherDepartment.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeachersDesignations.DesignationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreditTaken)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherDepartment.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeachersDesignations.DesignationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreditTaken)
                    </td>                  
                    <td>
                        <a href="@Url.Action("Edit", "Teacher", new { id = item.TeacherId })" class="btn btn-primary">
                            Edit
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Delete", "Teacher", new { id = item.TeacherId })" class="btn btn-danger">
                            Remove
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    </div>
