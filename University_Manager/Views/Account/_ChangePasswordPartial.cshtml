@model University_Manager.Models.LocalPasswordModel


        @using (Html.BeginForm("Manage", "Account"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

    <fieldset>
        <div class="panel panel-default" style="margin-top:20px">
            <div class="panel-heading"><h4> Cambiar contraseña</h4></div>

            <div class="panel-body">

                <ol>
                    <li>
                        @Html.LabelFor(m => m.OldPassword)
                        
                        @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.NewPassword)
                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.ConfirmPassword)
                       @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                    </li>
                </ol>
                <input type="submit" style="margin-top:20px" class="btn btn-primary btn-md" value="Cambiar contraseña" />

            </div>
        </div>
    </fieldset>
        }

