@model University_Manager.Models.RoomAllocation
@{
    ViewBag.Title = "Room Allocation";
}
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui-1.8.24.js" type="text/javascript"></script>
<h2>Allocate Room</h2>
<h4 style="color: red">@TempData["Message"]</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="glyphicon glyphicon-th"></span><h4 class="title">CREATE COURSE</h4></div>
            <div class="panel-body">
                <fieldset>
                    <div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DepartmentId, "Department")
                            @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control col-md-1" })
                            @Html.ValidationMessageFor(model => model.DepartmentId)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.CourseId, "Course")
                            @Html.Partial("_FilteredCourse")
                            @Html.ValidationMessageFor(model => model.CourseId)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RoomId, "Room")
                            @Html.DropDownList("RoomId", null, htmlAttributes: new { @class = "form-control col-md-1" })
                            @Html.ValidationMessageFor(model => model.RoomId)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DayId, "Day")
                            @Html.DropDownList("DayId", null, htmlAttributes: new { @class = "form-control col-md-1" })
                            @Html.ValidationMessageFor(model => model.DayId)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.StartTime)
                            @Html.TextBoxFor(model => model.StartTime, null, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.StartTime)
                        </div>
                        <div><h3 style="color: crimson">@TempData["ErrorMessage4"]</h3></div>
                        <div><h3 style="color: crimson">@TempData["ErrorMessage1"]</h3></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.EndTime)
                            @Html.TextBoxFor(model => model.EndTime, null, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.EndTime)
                        </div>
                        <div><h3 style="color: crimson">@TempData["ErrorMessage5"]</h3></div>
                        <div><h3 style="color: crimson">@TempData["ErrorMessage2"]</h3></div>

                        <div class="form-group">
                            <div class="col-md-offset-0 col-md-10">
                                <input type="submit" style="margin-top:20px" value="Allocate" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
                </fieldset>
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        </div>
            }


            <script type="text/javascript">
                    function FillData(id) {
                        $('#CourseId').load('@Url.Action("LoadCourse")', { departmentId: id });

                    }


                    $(function () {
                        $('#DepartmentId').change(function () {
                            var id = $('#DepartmentId').val();
                            FillData(id);
                        });

                    });
            </script>



