@model University_Manager.Models.Department

@{
    ViewBag.Title = "Delete";
}


<h3>Are you sure you want to delete this? Department</h3>
<div>
    <hr />
    <div class="col-md-8">
        <div class="panel panel-danger">
            <div class="panel-heading"><span class="glyphicon glyphicon-th"></span><h4 class="title">DELETE DEPARMENT</h4></div>

            <div class="panel-body">
                <dt>
                    @Html.DisplayNameFor(model => model.Code)
                </dt>
                <dd>
                    @Html.TextBoxFor(model => model.Code, null, new { @class = "form-control col-md-2", @readonly = "readonly" })
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control col-md-2", @readonly = "readonly" })

                </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <input type="submit"  value="Delete" style="margin-top:20px" class="btn btn-info" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>
