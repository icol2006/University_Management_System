@model University_Manager.Models.Course
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CourseId)
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><span class="glyphicon glyphicon-th"></span><h4 class="title">EDIT COURSE</h4></div>
                <div class="panel-body">
                    <fieldset>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.TextBoxFor(model => model.Code, null, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.Code)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Credit, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.TextBoxFor(model => model.Credit, null, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.Credit)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.TextBoxFor(model => model.Description, null, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.SemisterId, "SemisterId", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownList("SemisterId", null, htmlAttributes: new { @class = "form-control col-md-1" })
                            @Html.ValidationMessageFor(model => model.SemisterId)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DepartmentId, "DepartmentId", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control col-md-1" })
                            @Html.ValidationMessageFor(model => model.DepartmentId)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AssignTo, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.TextBoxFor(model => model.AssignTo, null, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.AssignTo)
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-0 col-md-10">
                                <input type="submit" style="margin-top:20px" value="Edit" class="btn btn-primary" />
                            </div>
                        </div>
                    </fieldset>
                </div>

               
            </div>
            <div style="margin-left:20px;margin-bottom:20px">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>


}

