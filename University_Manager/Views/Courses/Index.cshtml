@model IEnumerable<University_Manager.Models.Course>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-primary">
    <div class="panel-heading clearfix">
        <span class="glyphicon glyphicon-th"></span><h4 class="title">COURSES</h4>
        <input type="button" class="btn btn-default pull-right btp" value="Create new" onclick="location.href='@Url.Action("Create", "Courses")'" />
    </div>
    <div class="container-outer" style="padding:10px">
        <table id="myTable" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseDepartment.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseSemister.Semistername)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Credit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AssignTo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDepartment.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseSemister.Semistername)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignTo)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Courses", new { id = item.CourseId })" class="btn btn-primary">
                            Edit
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Delete", "Courses", new { id = item.CourseId })" class="btn btn-danger">
                            Remove
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>
 